%div{:id=>@id, :class=>['quoteblock', (attr :role), ('slide' if attr? 'step-option')]}
  - if title?
    .title=title
  %blockquote=content.chomp
  .attribution
    - if attr? :citetitle
      %cite=attr :citetitle
    - if attr? :attribution
      - if attr? :citetitle
        %br
      &#8212; #{attr :attribution}
