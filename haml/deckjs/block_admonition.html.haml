%div{:id=>@id, :class=>['admonitionblock', (attr :role)]}
  %table
    %tr
      %td.icon
        - if attr? :icons
          %img{:src=>icon_uri(attr :name), :alt=>(attr :caption)}
        - else
          .title=attr :caption
      %td.content
        - if title?
          .title=title
        =content.chomp