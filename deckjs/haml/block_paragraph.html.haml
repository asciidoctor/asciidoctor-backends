- else
  - if attr? :pagebreak
    %div(style="page-break-after:always")
  -# don't use .paragraph shorthand so that we can control the order of classes
  %div{:id=>id, :class=>['paragraph', (attr :role), ("slide" if attr :incremental )]}
    - if title
      .title=title
    %p{:class => [(attr :position), ("full-background-text" if attr :fullbackgroundtext)]}=content
